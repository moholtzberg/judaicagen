<span class="item_actions pull-right">
	<% if controller.action_name == 'show' %>
		<%= link_to "", edit_item_path(item), :class => "glyphicon glyphicon-pencil" %>
		<%= link_to "", item, method: :delete, data: {confirm: 'Are you sure?'}, :class => "glyphicon glyphicon-trash" %>
	<% else %>
		<%= link_to "", item, :class => "glyphicon glyphicon-eye-open" %>
		<%= link_to "", item, method: :delete, data: {confirm: 'Are you sure?'}, :class => "glyphicon glyphicon-trash" %>
	<% end %>
</span>